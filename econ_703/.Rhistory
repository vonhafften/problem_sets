# free disposal
for (i in 1:length(y_1)) {
polygon(x = c(y_1[i], y_1[i], -200, -200),
y = c(y_2[i], -20, -20, y_2[i]),
col = "red",
border = NA)
}
# convex
polygon(x = c(-70, -70, -20),
y = c(90, 40, 40),
col = "red",
border = NA)
polygon(x = c(-20, -20, 0),
y = c(40, 0, 0),
col = "red",
border = NA)
points(x=y_1, y=y_2)
abline(h = 0, v = 0)
