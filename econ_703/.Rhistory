# plot 3
library(shape)
y_1 <- c(-20, -50, -70)
y_2 <- c(40, 70, 90)
p_1 <- c(7, 5, 4)
p_2 <- c(4, 5, 8)
b <- (-1) * p_1 / p_2
a <- y_2 - b * y_1
plot(1, type = "n", ylim = c(-20, 120), xlim = c(-120, 20), xaxs="i", yaxs="i", ylab = "y_2", xlab="y_1", main = "Outer Bound")
polygon(x = c(-120, -70, -20, 25/1.75, -120),
y = c(115, 90, 40, -20, -20),
col = "red",
border = NA)
points(x=y_1, y=y_2)
Arrows(x0=y_1, x1=y_1+p_1,
y0=y_2, y1=y_2+p_2,
arr.type = "triangle")
for (i in 1:length(a)) abline(a = a[i], b = b[i], lty = 2)
abline(h = 0, v = 0)
